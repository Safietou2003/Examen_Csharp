@model IEnumerable<CSHARP.Models.Produit>

@{
    ViewData["Title"] = "Produits Disponibles";
}

<h2>Produits Disponibles</h2>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Libellé</th>
            <th>Quantité en Stock</th>
            <th>Prix Unitaire</th>
            <th>Images</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produit in Model)
        {
            <tr>
                <td>@produit.Libelle</td>
                <td>@produit.QuantiteStock</td>
                <td>@produit.PrixUnitaire</td>
                <td>
                    <img src="@produit.Images" alt="@produit.Libelle" class="img-thumbnail" style="max-width: 100px;" />
                </td>
                <td>
                    <a href="@Url.Action("AjouterAuPanier", new { id = produit.Id })" class="btn btn-primary">Ajouter au Panier</a>
                </td>
            </tr>
        }
    </tbody>
</table>
