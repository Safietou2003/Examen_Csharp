@model IEnumerable<CSHARP.Models.Facture>

<h2>Rapports Financiers</h2>
<p>
    <a href="@Url.Action("GenerateReport", "Comptable")" class="btn btn-primary">Générer un Rapport</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Montant</th>
            <th>Commande</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var facture in Model)
        {
            <tr>
                <td>@facture.Date.ToString("yyyy-MM-dd")</td>
                <td>@facture.Montant</td>
                <td>@facture.CommandeId</td>
                <td>
                    <a href="@Url.Action("Details", "Factures", new { id = facture.Id })" class="btn btn-info">Détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>
