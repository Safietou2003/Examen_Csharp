@model IEnumerable<CSHARP.Models.Commande>

<h2>Commandes</h2>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Montant</th>
            <th>Statut</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var commande in Model)
        {
            <tr>
                <td>@commande.Date.ToString("yyyy-MM-dd")</td>
                <td>@commande.Montant</td>
                <td>@commande.Statut</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = commande.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = commande.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

