@model IEnumerable<CSHARP.Models.Commande>

@{
    ViewData["Title"] = "Préparation des Commandes";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.Montant)</th>
            <th>@Html.DisplayNameFor(model => model.Statut)</th>
            <th>@Html.DisplayNameFor(model => model.Client.Nom)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Date)</td>
            <td>@Html.DisplayFor(modelItem => item.Montant)</td>
            <td>@Html.DisplayFor(modelItem => item.Statut)</td>
            <td>@Html.DisplayFor(modelItem => item.Client.Nom)</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
            </td>
        </tr>
}
    </tbody>
</table>

