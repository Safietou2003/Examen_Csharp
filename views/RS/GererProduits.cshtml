@model IEnumerable<CSHARP.Models.Produit>

@{
    ViewData["Title"] = "Gérer Produits";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Ajouter un Nouveau Produit</a>
</p>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Libelle)</th>
            <th>@Html.DisplayNameFor(model => model.QuantiteStock)</th>
            <th>@Html.DisplayNameFor(model => model.PrixUnitaire)</th>
            <th>@Html.DisplayNameFor(model => model.QuantiteSeuil)</th>
            <th>@Html.DisplayNameFor(model => model.Images)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Libelle)</td>
            <td>@Html.DisplayFor(modelItem => item.QuantiteStock)</td>
            <td>@Html.DisplayFor(modelItem => item.PrixUnitaire)</td>
            <td>@Html.DisplayFor(modelItem => item.QuantiteSeuil)</td>
            <td>@Html.DisplayFor(modelItem => item.Images)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>

